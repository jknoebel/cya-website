server {
    listen       ${PORT};
    server_name  localhost;
    location ~* \.(?:ico|css|js|gif|jpe?g|png)$ {
        expires 30d;
        add_header Vary Accept-Encoding;
        access_log off;
    }
    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }
}